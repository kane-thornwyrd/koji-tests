{
  "name": "server",
  "description": "API Server for the Case-C of the Koji tests",
  "main": "lib/index.js",
  "type": "commonjs",
  "engines": {
    "node": "16"
  },
  "keywords": [
    "express",
    "express api",
    "express template",
    "scaffolding"
  ],
  "scripts": {
    "lint": "eslint lib",
    "start": "node --inspect=5858 -r dotenv/config -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "prod": "node -v && node lib/server.js"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "dotenv": "16.0.0",
    "express": "4.17.1",
    "helmet": "4.6.0",
    "pino": "6.11.3",
    "pino-pretty": "5.0.2",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/express": "4.17.13",
    "@types/pino": "7.0.5",
    "eslint": "7.28.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.3",
    "nodemon": "2.0.15"
  },
  "private": true,
  "version": "0.0.1",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
